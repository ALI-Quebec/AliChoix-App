<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/product_not_found_pop_up"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
     android:id="@+id/product_not_found_warning_icon"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_warning_24"/>

    <TextView
        android:id="@+id/product_not_found_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le produit n'a pas été trouvé"
        android:layout_toEndOf="@id/product_not_found_warning_icon"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>